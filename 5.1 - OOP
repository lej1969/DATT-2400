class Target {

//1. Instance Variables
float x, y;
float vx, vy;

//2. Constructor
//Name: no void, name must be the same as the class
Target() {
  x = (width/2)
  y = (height/2)
}

//3. Behaviour Functions
void show() {
  ellipse(x, y, 50, 50)
}

void act() {
  x = x + vx;
  y = y + vy;
  
  if (x < 0 || x > 600) {
    vx = vx * -1;
    
  if (y < 0 || y > 600) {
    vy = vy * -1;
}
